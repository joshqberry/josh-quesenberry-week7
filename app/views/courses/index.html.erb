<h1>All of a specific user's courses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Day or night?</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>



    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.day_or_night %></td>
      </tr>

</tbody>

<% end %>
